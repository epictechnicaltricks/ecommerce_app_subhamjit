<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">



		<LinearLayout
			android:id="@+id/relative"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/imageview_aff"
					android:layout_width="match_parent"
					android:layout_height="220dp"
					android:background="#757575"
					android:src="@drawable/bg"
					android:scaleType="centerCrop"/>
			</LinearLayout>
			<androidx.cardview.widget.CardView
				android:id="@+id/top_cardview1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:translationY="-30.0dp"
				app:cardElevation="0dp"
				app:cardCornerRadius="30dp">
				<ScrollView
					android:id="@+id/vscroll1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scrollbars="none">
					<LinearLayout
						android:id="@+id/bg"
						android:padding="15dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">


						<TextView
							android:padding="10dp"
							android:id="@+id/b"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"

							android:gravity="left"
							android:textSize="25sp"
							android:textStyle="bold"
							android:text="The happiness of
Real Spice of Odisha "
							android:textColor="#000000"
							android:layout_weight="1"/>


						<androidx.cardview.widget.CardView


							android:id="@+id/wb9877"
							android:padding="0dp"
							android:layout_margin="10dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:cardElevation="4dp"
							app:cardCornerRadius="15dp">
							<LinearLayout
								android:padding="0dp"
								android:id="@+id/linear31"
								android:layout_width="match_parent"
								android:layout_height="match_parent"

								android:orientation="vertical">

								<WebView
									android:padding="0dp"
									android:id="@+id/wb"
									android:layout_width="match_parent"
									android:layout_height="200dp"/>





							</LinearLayout>
						</androidx.cardview.widget.CardView>



						<TextView
							android:padding="10dp"
							android:id="@+id/c"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
android:layout_marginBottom="55dp"

							android:gravity="left"

							android:text="Started in 1965, as a small of flour mill, mahakali attakala is blessed to be familiar and popular in every house hold in odisha with a trust and unique quality of its products.

Where we stand today is solely because of our customers, who by their word of mouth have promoted our products to reach the nooks and corners of our country, acting as our only free will brand ambassador.

We select our batch of products from the best sources available , clean them from any impurities, process them to their best consumable form, pack them in high quality packages and then make it available to our customers.
"
							android:textSize="17sp"
							android:textColor="#959292" />



					</LinearLayout>



				</ScrollView>
			</androidx.cardview.widget.CardView>



		</LinearLayout>



	</LinearLayout>
</LinearLayout>

